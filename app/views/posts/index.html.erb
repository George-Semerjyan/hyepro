<% if current_user %>

<div class="container">
 
 <h1>Fresh Produce</h1>
</br>

 <div class="row">
 <% @posts.each do |post| %>
    <div class="text-center">
     <div class="col">
      <div class="card" style="margin-bottom: 3rem; width: 20rem; height: auto;">
      <%= image_tag(post.image, style:"width: 100%;") %>
        <div class="card-body">
        <h5 class="card-title"> <%= post.strain_name %> <small> <%= post.category %></small> </h5>
        <p class="card-text"> <%= post.description %></p>
        <strong class="card-text">$<%= post.price %> </strong>
        <a id="contact-button" class="btn btn-outline-info"<%= link_to "Contact Seller", post %> </a>
     </div>
      </div>
      </div>
        </div>
        
        <% end %>
        
        <% else %>
        <h3>Must sign in to view this page.</h3>
        <% end %>
    </div>
</div>